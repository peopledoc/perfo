{{#if project}}
  {{#collapsible-container title="Build durations" isCollapsed=false}}
    {{#if isLoadingBuilds}}
      Loading project builds for {{project.name}} on {{branch}}, this may take a little while...
    {{else}}
      {{ci-perf-graph projectBuilds=sortedBuilds title=mainGraphTitle}}
    {{/if}}
  {{/collapsible-container}}

  {{#each sortedCustomGraphs as |graph|}}
    {{#collapsible-container title=graph.title isCollapsed=true}}
      {{custom-graph project=project branch=branch graph=graph}}
      {{graph-controls graph=graph jobNames=projectJobNames graphChangedAction=(action 'graphChanged')}}
    {{/collapsible-container}}
  {{/each}}

  {{#collapsible-container title=(if isAddingCustomGraph "New custom graph" "Add custom graph") isCollapsed=isAddFormCollapsed onToggle=(action 'toggleAddCustomGraph')}}
    {{#custom-graph-form submitLabel='Add' model=newCustomGraph jobNames=projectJobNames submitAction=(action 'addCustomGraph')}}
      {{#bs-button size="sm" type="secondary" onClick=(action 'cancelAddCustomGraph')}}Cancel{{/bs-button}}
    {{/custom-graph-form}}
  {{/collapsible-container}}
{{/if}}
