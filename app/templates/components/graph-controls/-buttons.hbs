{{#if graph.isDeleting}}
  <BsButton @size="sm" @type="danger" @onClick={{action "deleteCustomGraph" graph}}>Confirm remove</BsButton>
  <BsButton @size="sm" @type="success" @onClick={{action "toggleConfirmRemoveCustomGraph" graph}}>Keep</BsButton>
{{else}}
  <BsButton @size="sm" @type="warning" @onClick={{action "toggleConfirmRemoveCustomGraph" graph}}>Remove</BsButton>
{{/if}}
{{#if (gt graph.order 0)}}
  <BsButton @size="sm" @type="secondary" @onClick={{action "moveCustomGraph" graph "up"}}>Move up</BsButton>
{{/if}}
{{#if (lt graph.order maxCustomGraphOrder)}}
  <BsButton @size="sm" @type="secondary" @onClick={{action "moveCustomGraph" graph "down"}}>Move down</BsButton>
{{/if}}
