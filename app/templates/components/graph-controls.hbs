{{#if isEditing}}
  <CustomGraphForm @model={{editingData}} @jobNames={{jobNames}} @submitLabel="Save" @submitAction={{action "saveCustomGraph" graph}}>
    <BsButton @size="sm" @type="secondary" @onClick={{action "toggleEditCustomGraph" graph}}>Cancel</BsButton>
    <GraphControls::-Buttons @graph={{graph}} @graphChangedAction={{graphChangedAction}} />
  </CustomGraphForm>
{{else}}
  <BsButton @size="sm" @type="primary" @onClick={{action "toggleEditCustomGraph" graph}}>Edit</BsButton>
  <GraphControls::-Buttons @graph={{graph}} @graphChangedAction={{graphChangedAction}} />
{{/if}}
